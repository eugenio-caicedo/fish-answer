<%= render 'layouts/header' %>

<!--<p id="notice"><%= notice %></p>-->

<div class="container">
	<%= render "layouts/card/top", card: {class: "col s12 m8 l8 offset-m2 offset-l2"} %>
		<div class="card-content">
			<%= render "layouts/form/title", title: @answer.title %>
			<div class="content_supporting-text">
				<div class="text"><%= @answer.description %></div>
				<hr/>
				<% if !@client_decorator.same_client? and @client_decorator.current_user? %>
					<div class="raiting-me">
						<span>Mi Clasificaci&oacute;n:</span>
						<%= rating_for @answer, "vote" %>
					</div>
				<% end %>
				<div class="left-align"><%= render "answers/info_client", answer: @answer %></div>
			</div>
			<% if (!@user.nil? and @answer.client.id == @user.client.id) %>
				<div class="actions card-action left-align">
  					<%= link_to 'Editar', edit_question_answer_path(@question, @answer) %>
					<%= link_to 'Regresar', question_path(@question) %>
  				</div>
  			<% end %>
		</div>
	<%= render "layouts/card/bottom" %>
	<!--<%= link_to 'Back', question_path(@question) %>-->
</div>

<%= render 'layouts/footer' %>