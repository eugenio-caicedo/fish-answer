<!-- FIRST NAME -->
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :first_name, class: "mdl-textfield__label" %>
    <%= f.text_field :first_name, class: "mdl-textfield__input" %>
  </div>
  
  <!-- LAST FIRST NAME -->
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :last_first_name, class: "mdl-textfield__label" %>
    <%= f.text_field :last_first_name, class: "mdl-textfield__input" %>
  </div>
  
  <!-- SEX -->
  <div class="field">
    <%= f.label :sex %><br>
    <div id="client_sex">
    	<% Client.sexValue.each do |sex| %>
    		<label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="client_sex_<%= sex.downcase %>">
    			<%= f.radio_button :sex, sex, class: "mdl-radio__button" %>
    			<span class="mdl-radio__label"><%= sex %></span>
    		</label>
    	<% end %>
    </div>
  </div>
  
  <!-- AGE -->
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :age, class: "mdl-textfield__label" %>
    <%= f.text_field :age, class: "mdl-textfield__input", pattern: "-?[0-9]*(\.[0-9]+)?" %>
    <span class="mdl-textfield__error">No es un n√∫mero!</span>
  </div>