<div class="container center-align">
	<%= render "layouts/card/top", card: {class: "col s12 m6 offset-m3 l8 offset-l2"} %>
	
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        	<div class="card-content">
            	<%= render "layouts/form/title", title: "Inicio de Session" %>
            	
            	<!-- NOTIFICATION -->
        		<% if notice.presence %>
					<div class="alert alert-danger"><%= notice %></div>
				<% end %>
		
				<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
				
				<div class="space-center">
				
					<!-- USERNAME -->
					<%= render "layouts/form/texfield", input: {id: "user[username]", label: "Usuario:"} %>
						
					<br/>
  					
  					<!-- PASSWORD -->
					<%= render "layouts/form/texfield", input: {id: "user[password]", label: "Clave:", type: "password" } %>
											
  				</div>
  			</div>
  				
  			<!-- BUTTONS -->
  			<%= render "layouts/buttons", actions: {submit:"Login"} %>			
  		<% end %>
	<%= render "layouts/card/bottom" %>

	<div class="row">
		<%= link_to "Â¿No posee Cuenta?", "/users/register/client", class: "link" %>
	</div>
</div>
